# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Jupyter Notebooks
*.ipynb text eol=lf

# Data files
*.csv binary
*.pkl binary
*.h5 binary
*.hdf5 binary
*.pb binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary

# Archives
*.zip binary
*.tar binary
*.gz binary
